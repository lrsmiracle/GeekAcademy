<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jikexueyuan.uespermissionstocontrolactivity">

    <permission android:name="com.jikexueyuan.uespermissionstocontrolactivity.usepermission" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PermissionUseActivity"
            android:permission="com.jikexueyuan.uespermissionstocontrolactivity.usepermission">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="com.jikexueyuan.uespermissionstocontrolactivity.PermissionUseActivity"/>

            </intent-filter>
        </activity>
    </application>

</manifest>